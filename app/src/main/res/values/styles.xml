<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="text_h2_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/textSize_h2</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">monospace</item>
        <item name="android:textColor">@color/default_text_color</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>

    <style name="text_h1_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/textSize_h1</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">monospace</item>
        <item name="android:layout_margin">@dimen/normal_8dp</item>
        <item name="android:background">@color/default_text_color</item>
        <item name="android:textColor">@color/app_background</item>
        <item name="android:padding">@dimen/normal_8dp</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>

    <style name="text_h3_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/textSize_h3</item>
        <item name="android:layout_marginStart">@dimen/normal_4dp</item>
        <item name="android:textColor">@color/default_text_color</item>
        <item name="android:layout_marginBottom">@dimen/normal_8dp</item>
    </style>

    <style name="image_layout_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/layout_image_height</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="srcCompat">@drawable/placeholder_picture_of_day</item>
    </style>

    <style name="image_land_layout_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/layout_image_height</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="srcCompat">@drawable/placeholder_picture_of_day</item>
    </style>

    <style name="ll_holder_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:orientation">vertical</item>
    </style>

</resources>
